{
  "name": "baileys-server",
  "version": "1.0.0",
  "description": "Standalone Baileys WhatsApp Server with REST API",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npx kill-port 3005 && tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "kill-port": "npx kill-port 3005",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "api",
    "webhook",
    "multi-account"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "baileys": "^6.7.18",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jimp": "^0.22.10",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "kill-port": "^2.0.1",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
