            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.globals.set('connectedAccountId', response.data.id);",
                  "    pm.test('Account connection initiated', () => {",
