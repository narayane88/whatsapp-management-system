              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "// Only test if account is connected",
                      "if (pm.response.code === 200) {",
                      "    pm.test('Message sent successfully', () => {",
                      "        const response = pm.response.json();",
                      "        pm.expect(response.success).to.be.true;",
                      "    });",
                      "} else {",
                      "    pm.test('Account not ready for messaging', () => {",
